'''
import random

custom_playlist = []

def song_of_the_day():
    songofday_list = []

    for i in range(100):
        song_of_day_playlist = sp.playlist("1ak02xRxcy5UjN0TqoaaWw")
        song = song_of_day_playlist["tracks"]["items"][i]["track"]["name"]
        songofday_list.append(song)

    random_song = random.choices(songofday_list,k=1)
    print(f"Today's song of the day is {random_song}! We hope you give a listen and enjoy!")
    
    song_of_add = input(f"Would you like to add {random_song} to your playlist?")
    
    if song_of_add == "yes":
       custom_playlist.append(random_song)
       print("Song added!")
                        
    else:
       pass 
    
song_of_the_day()
'''

